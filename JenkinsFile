pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS=credentials('Docker_Login')
    }

    stages {
        stage('Install Docker'){
            steps {
                script{
                    sh "curl -fsSL https://get.docker.com -o get-docker.sh && sudo sh get-docker.sh && sudo usermod -aG docker jenkins"
                    sh "sudo apt-get -y install docker-compose"
                }
            }
        }
        stage('Docker Build'){
            steps {
                script{
                    sh "docker build -t wojciechprzybylski/cinema-app:latest ."
                    sh "cd ./db"
                    sh "docker build -t wojciechprzybylski/cinema-db:latest ."
                }
            }
        }
        stage('Login-to DockerHub and push'){
            steps {
                script {
                sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"
                sh "docker push wojciechprzybylski/cinema-db:latest && docker push wojciechprzybylski/cinema-app:latest"
                }
            }
        }
        stage('Pull newest Docker image') {
            steps {
                script {
                    // Define the image name from Docker Hub
                    def imageName1 = 'wojciechprzybylski/cinema-db:latest'
                    def imageName2 = 'wojciechprzybylski/cinema-app:latest'

                    // Pull the Docker image from Docker Hub
                    def dockerImage1 = docker.image(imageName1).pull()
                    def dockerImage2 = docker.image(imageName2).pull()

                    // Run a container from the pulled image
                    def container1 = dockerImage1.run()
                    def container2 = dockerImage2.run()

                    container1.stop()
                    container2.stop()
                    container1.remove()
                    container2.remove()
                }
            }
        }
        // stage('Deploy through docker-compose') {
        //     steps {
        //         sh "docker-compose up"
        //     }
        // }
        
    }   
}
