pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh "sudo apt install -y python3-pip"
            }
        }
        stage('Dependencies'){
            steps {
                sh "pip install -r requirements.txt"
            }
        }
        stage('Create Docker Image for db') {
            steps {
                script {
                    def dockerImage = docker.build("cinema-db:v1", "./db")
                    dockerImage.push()
                }
            }
        }
        stage('Deploy') {
            steps {
                sh "python3 app.py"
            }
        }
    }   
}
