pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh "sudo apt install -y python3-pip"
            }
        }
        stage('Dependencies'){
            steps {
                sh "pip install -r requirements.txt"
            }
        }
        stage('Install Docker'){
            steps {
                sh "curl -fsSL https://get.docker.com -o get-docker.sh && sudo sh get-docker.sh && sudo usermod -aG docker jenkins"
            }
        }
        stage('Create Docker Image for db') {
            steps {
                script {
                    sh "cd ./db"
                    sh "docker build -t cinema-db:v1 ."
                }
            }
        }
        stage('Deploy') {
            steps {
                sh "python3 app.py"
            }
        }
    }   
}
