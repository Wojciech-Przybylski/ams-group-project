pipeline {
    agent any

    enviroment {
        DOCKERHUB_CREDENTIALS=credentials('Docker_Login')
    }

    stages {
        stage('Install Docker'){
            steps {
                script{
                    sh "curl -fsSL https://get.docker.com -o get-docker.sh && sudo sh get-docker.sh && sudo usermod -aG docker jenkins"
                    sh "sudo apt-get -y install docker-compose"
                }
            }
        }
        stage('Docker Build'){
            steps {
                script{
                    sh "docker build -t wojciechprzybylski/cinema-app:latest ."
                    sh "cd ./db"
                    sh "docker build -t wojciechprzybylski/cinema-db:latest ."
                }
            }
        }
        stage('Login'){
            steps {
                sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"
            }
        }
        stage('push'){
            steps {
                sh "docker push wojciechprzybylski/cinema-db:latest && docker push wojciechprzybylski/cinema-app:latest"
            }
        }
        // stage('Deploy through docker-compose') {
        //     steps {
        //         sh "docker-compose up"
        //     }
        // }
        
    }   
}
